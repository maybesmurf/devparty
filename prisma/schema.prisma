// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  // Include binary targets for whatever platform the user is on, ubuntu (dev), and alpine (prod).
  binaryTargets   = ["native", "debian-openssl-1.1.x", "linux-musl"]
  previewFeatures = ["orderByRelation", "selectRelationCount"]
}

model User {
  id             String    @id @default(uuid())
  name           String
  email          String    @unique
  hashedPassword Bytes
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  posts          Post[]
  sessions       Session[]
}

model Session {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  expiresAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id])
  userId    String
}

// Feel free to remove this when you get started, it's here to demonstrate what your models may look
// like, and give an end-to-end example of the product.
model Post {
  id        String   @id @default(uuid())
  text      String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
